# Environment Configuration File
# Copy this to .env and fill in your actual values

# Materials Project API
MP_API_KEY=your_materials_project_api_key_here

# PubMed/NCBI API
NCBI_EMAIL=your_email@domain.com

# Neo4j Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# Elasticsearch
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200

# Model Configuration
DEFAULT_EMBEDDING_MODEL=allenai/scibert_scivocab_uncased
DEFAULT_NER_MODEL=allenai/scibert_scivocab_uncased
HUGGINGFACE_CACHE_DIR=./models/cache

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/materials_rag.log

# Data Paths
DATA_DIR=data
RAW_DATA_DIR=data/raw
PROCESSED_DATA_DIR=data/processed
MODELS_DIR=models
CACHE_DIR=cache

# Performance Settings
MAX_WORKERS=4
BATCH_SIZE=32
MAX_SEQUENCE_LENGTH=512

# Retrieval Settings
FAISS_INDEX_TYPE=IndexFlatIP
VECTOR_DIMENSION=768
MAX_RETRIEVAL_RESULTS=100
SIMILARITY_THRESHOLD=0.7

# RAG Settings
MAX_CONTEXT_LENGTH=4096
TEMPERATURE=0.7
MAX_TOKENS=512
